<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="aboutThisApp"
            type="io.github.droidkaigi.confsched2018.model.AboutThisApp"
            />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/about_this_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:paddingStart="24dp"
            android:text="@{aboutThisApp.name}"
            android:textColor="#de000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ライセンス"
            />

        <TextView
            android:id="@+id/about_this_app_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4.8sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@{aboutThisApp.description}"
            android:textAlignment="viewStart"
            android:textColor="#8b000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/about_this_app_name"
            app:layout_constraintTop_toBottomOf="@id/about_this_app_name"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="このアプリでは、多くの素晴らしいライブラリを使用させていただいています。"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/divider_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about_this_app_description"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
